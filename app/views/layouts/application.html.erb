<!DOCTYPE html>
<html>
    <head>
        <title>Byzplan</title>
        <%= stylesheet_link_tag "application", :media => "all" %>
        <%= stylesheet_link_tag "http://www.netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
        <%= render 'layouts/shim' %>
    </head>
    <body>
        <div class="container">
            <%= render 'layouts/header' %>

            <% flash.each do |name, msg| %>
                <%= content_tag :div, msg, class: "alert alert-#{name}" %>
            <% end %>
            
            <%= yield %>
            <%= render 'layouts/footer' %>
        </div>
    </body>
</html>
